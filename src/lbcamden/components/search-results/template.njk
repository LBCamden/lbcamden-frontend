<ul class="lbcamden-search-results">
  {% for item in params.items %}
  <li class="lbcamden-search-results__item">
    <h2>
      <a href="{{ item.href }}">
        {{ item.title }}
      </a>
    </h2>

    <div class="lbcamden-search-results__breadcrumbs">
      {% for crumb in item.breadcrumbs %}
        <span class="lbcamden-search-results__breadcrumb">
          <a href="{{ crumb.href }}">
            {{ crumb.text }}
          </a>
        </span>
      {% endfor %}
    </div>

    <div class="lbcamden-search-results__description">
      {{ item.summary }}
    </div>
  </li>
  {% endfor %}
</ul>
