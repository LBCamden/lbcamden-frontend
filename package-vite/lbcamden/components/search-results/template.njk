{% set h %}h{{ params.headingLevel|default("3") }}{% endset %}

<ul class="lbcamden-search-results">
  {% for item in params.items %}
  <li class="lbcamden-search-results__item">
    <{{ h }} class="lbcamden-search-results__heading govuk-heading-l">
      <a href="{{ item.href }}">
        {{ item.title }}
      </a>
    </{{ h }}>

    {% if item.externalSite %}
      <div class="lbcamden-search-results__location">
        {{ item.externalSite }}
      </div>
    {% else %}
      <div class="govuk-breadcrumbs govuk-breadcrumbs--collapse-on-mobile lbcamden-search-results__location">
        <ol class="govuk-breadcrumbs__list">
          {% for crumb in item.breadcrumbs %}
            <li class="govuk-breadcrumbs__list-item">
              {{crumb.text}}
            </li>
          {% endfor %}
        </ol>
      </div>
    {% endif %}

    <div class="lbcamden-search-results__description">
      <p>{{ item.summary }}</p>
    </div>
  </li>
  {% endfor %}
</ul>
