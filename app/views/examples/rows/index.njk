{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set mainClasses = 'null' %}

{% extends "layout.njk" %}

{% block beforeContent %}
  <div class="govuk-width-container">
    {{ govukBackLink({
      "href": "/"
    }) }}
  </div>
{% endblock %}

{% block content %}

  {% set variants = {
    'Decorative background': 'LBCamden-Row--bg',
    'Default': '',
    'Decorative background 2': 'LBCamden-Row--bg-2',
    'Large row': 'LBCamden-Row--large',
    'Large row with decorative background': 'LBCamden-Row--large LBCamden-Row--bg'
  } %}

  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          Rows
        </h1>
      </div>
    </div>
  </div>

  {% for variant_description, variant_class in variants %}
    <div class="LBCamden-Row {{ variant_class }}">
      <div class="govuk-width-container">
        <h2>{{ variant_description }}</h2>
      </div>
    </div>
  {% endfor %}
{% endblock %}
