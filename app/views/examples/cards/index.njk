{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "../../../../src/lbcamden/components/card/macro.njk" import LBCamdenCard %}

{% extends "layout.njk" %}

{% block beforeContent %}
  <div class="govuk-width-container">
    {{ govukBackLink({
      "href": "/"
    }) }}
  </div>
{% endblock %}

{% block content %}

  {% set variants = {
    'Default': '',
    'Promo links': 'promo-link',
    'Promo links with copy': 'promo-link',
    'Promo links alt': 'promo-link--alt',
    'Promo links alt with copy': 'promo-link--alt',
    'Style 1': 'alt-1',
    'Style 2': 'alt-2',
    'Style 3': 'alt-3',
    'Naked': 'naked'
  } %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h1 class="govuk-heading-xl">
        Cards
      </h1>

      {% for variant_description, variant_class in variants %}

        <section class="LBCamden-Row">
          <h2 class="govuk-heading-l">{{ variant_description }}</h2>

          <ul class="LBCamden-Card_Wrapper LBCamden-Card_Wrapper--three-columns">
            {% set loopCount = [1, 2, 3] %}
            {% for item in loopCount %}
              {% if variant_description === 'Promo links' or variant_description === 'Promo links alt' %}
                {{ LBCamdenCard({
                  heading: {
                    title: 'Example',
                    href: '#'
                  },
                  clickable: true,
                  type: variant_class
                }) }}
              {% else %}
                {{ LBCamdenCard({
                  heading: {
                    title: 'Example',
                    href: '#'
                  },
                  content: {
                    text: 'Description'
                  },
                  clickable: true,
                  type: variant_class
                }) }}
              {% endif %}
            {% endfor %}
          </ul>
        </section>
      {% endfor %}

    </div>
  </div>
{% endblock %}
