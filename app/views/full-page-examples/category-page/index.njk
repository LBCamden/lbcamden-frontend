---
scenario: The top level page for a topic, service or category.
notes:
---
{% extends "full-page-example.njk" %}

{% from "card/macro.njk" import LBCamdenCard %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% set pageTitle = "Business" %}
{% block pageTitle %}{{ pageTitle }} - CAMDEN.GOV.UK{% endblock %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "#/"
      }
    ]
  }) }}
{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <h1 class="govuk-!-margin-bottom-5">Business</h1>

      <p class="govuk-body-lead">Advice and support for businesses in Camden. Licensing information, guidance on paying
        your business rates and more.</p>

    </div>
  </div>

  <h2>Popular</h2>

  <ul class="lbcamden-card-grid lbcamden-card-grid--popular govuk-!-margin-bottom-9">
    {% set widthClass = 'lbcamden-card--popular' %}
    {% set popularItems = [
      {
        title: "Paying your business rates",
        href: "#"
      },
      {
        title: "Camden's new e-invoicing service",
        href: "#"
      },
      {
        title: "Search the licensing public register",
        href: "#"
      },
      {
        title: "Discounts and exemptions for business rates",
        href: "#"
      },
      {
        title: "Pavement licensing",
        href: "#"
      },
      {
        title: "Alcohol premises licensing",
        href: "#"
      }
    ] %}

    {% for item in popularItems %}
        <li>
          <a class="lbcamden-link--promo lbcamden-link--promo-alt" href="#">{{ item.title }}</a>
        </li>
    {% endfor %}

  </ul>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h2 class="govuk-heading-l">Contents</h2>
      {% set widthClass = 'lbcamden-card lbcamden-card--naked' %}

      {% set items = [
        {
          title: 'Business rates',
          links: [
          'Business rates explained',
          'Discounts and exemptions for business rates',
          'Paying your business rates'
        ]
        },
        {
          title: 'Markets',
          links: [
          'Visit Camdenâ€™s markets',
          'Apply to trade in Camden',
          'Market news'
        ]
        },
        {
          title: 'Licensing',
          links: [
          'Alcohol and entertainment',
          'Other licenses and permits',
          'Search the licensing public register'
        ]
        },
        {
          title: 'Doing business in Camden',
          links: [
          'Starting or growing your business',
          'Business rates, licensing and permits',
          'Trading standards'
        ]
        },
        {
          title: 'Food business',
          links: [
          'Registering a food business',
          'Food and hygiene information',
          'Food safety training'
        ]
        },
        {
          title: 'Getting paid by Camden',
          links: [
          'Camden\'s Accounts Payable Policy',
          'Camden\'s new e-invoicing service',
          'e-invoicing Support'
        ]
        }
      ] %}
      <ul class="lbcamden-card-grid">
        {% for item in items %}
          {% set cardHtml %}
            {% if item.links %}
              <ul class="lbcamden-list--dash">
                {% for link in item.links %}
                  <li><a href="#">{{ link }}</a></li>
                {% endfor %}
              </ul>
              <a href="#" class="lbcamden-link--action">View all</a>
            {% endif %}
          {% endset %}
          {{ LBCamdenCard({
            element: 'li',
            heading: {
              title: item.title
            },
            content: {
              html: cardHtml
            }
          }) }}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}

{% block afterContent %}
  <section class="lbcamden-row lbcamden-row--related">
    <div class="govuk-width-container">
      <h2 class="govuk-heading-l">Related</h2>
      <ul class="lbcamden-list--dash">
        <li><a href="#">Business rates</a></li>
        <li><a href="#">Apply for business and trade parking permits</a></li>
        <li><a href="#">Advertisements and signs and planning permission</a></li>
        <li><a href="#">Estate agent boards and planning permission</a></li>
      </ul>
    </div>
  </section>
{% endblock %}
