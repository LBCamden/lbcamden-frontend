{% extends "full-page-example.njk" %}
{% set mainClasses = 'govuk-width-container' %}

{% from "engagement-banner/macro.njk" import LBCamdenEngagementBanner %}
{% from "promo-gallery/macro.njk" import LBCamdenPromoGallery %}
{% from "card-gallery/macro.njk" import LBCamdenCardGallery %}
{% from "branded-hero/macro.njk" import LBCamdenBrandedHero %}


{% block styles %}
  <style>
    body {
      background-color: #F6F6F6 !important;
      overflow-x: hidden;
    }

    .govuk-main-wrapper {
      padding-top: 0;
    }
  </style>
{% endblock %}

{% set pageTitle = "Home" %}
{% block pageTitle %}{{ pageTitle }} - CAMDEN.GOV.UK{% endblock %}

{% block content %}

{% from "branded-hero/macro.njk" import LBCamdenBrandedHero %}

{{ LBCamdenBrandedHero({
  "headline": "Supporting families to give children the best start in life",
  "tagline": {
    "text": "For children and young people 0-25",
    "classes": "",
    "url": ""
  },
  "image": {
    "src": "/example-assets/images/image.png",
    "alt": ""
  },
