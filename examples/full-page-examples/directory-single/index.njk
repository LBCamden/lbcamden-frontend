{% extends "examples/layouts/full-page-example.njk" %}
{% set mainClasses = 'govuk-width-container' %}

{% from "node_modules/govuk-frontend/dist/govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "src/lbcamden/components/directory-record/macro.njk" import LBCamdenDirectoryRecord %}

{% set pageTitle = "Contact Building Control" %}
{% block pageTitle %}{{ pageTitle }} - CAMDEN.GOV.UK{% endblock %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "#/"
      },
      {
        text: "Contacts",
        href: "#/"
      },
      {
        text: "Planning contacts",
        href: "#/"
      }
    ]
  }) }}
{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1>Contact Building Control</h1>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop lbcamden-prose">

      {{ LBCamdenDirectoryRecord({
        'title': 'Building Control (Camden Council)',
        'items': [
          {
            'label': 'Email',
            'value': '<a href="mailto:building.control@camden.gov.uk" title="building.control@camden.gov.uk">building.control@camden.gov.uk</a>'
          },
          {
          'label': 'Website',
          'value': '<a href="http://www.camden.gov.uk/building-control" rel="external" target="_blank"> www.camden.gov.uk/building-control</a>'
          },
          {
          'label': 'Address',
          'value': '2nd Floor 5<br>Pancras Square<br>London<br>N1C 4AG'
          },
          {
          'label': 'Details',
          'value': 'Ensures that all building work, both public and private sector, meets the requirements of the Building Regulations. These include structural and fire safety, thermal and sound insulation, drainage, and access and facilities for disabled people. Also deals with reports of dangerous structures. This is during opening hours for private properties only, and all other properties in Camden at any time. Out of hours reports are passed by the switchboard to a duty rota of building control managers.'
          },
          {
          'label': 'When is it on',
          'value': '9am-5pm.'
          }
        ]
      })}}

    </div>
    <div class="govuk-grid-column-one-third-from-desktop">
      <aside class="lbcamden-card lbcamden-card--alt-1">
        <h2>Related content</h2>
        <div class="lbcamden-card__content">
          <ul class="lbcamden-list lbcamden-list--dash">
            <li><a href="#">Planning and building development</a></li>
          </ul>
        </div>
      </aside>
    </div>
  </div>
{% endblock %}

