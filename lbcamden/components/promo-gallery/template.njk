<div class="lbcamden-promo-gallery {% if params.surround %}lbcamden-surround {% endif %} {{ params.classes }}">
    {% if params.heading %}
      <h2>{{ params.heading }}</h2>
    {% endif %}

    {% if params.shortDescription %}
      <p class="lbcamden-promo-gallery__description">
        {{ params.shortDescription }}
      </p>
    {% endif %}

    <ul class="lbcamden-card-grid lbcamden-card-grid--popular">
        {% for item in params.items %}
            <li class="lbcamden-card-grid--link-wrapper">
                <a class="lbcamden-card--clickable lbcamden-link--promo lbcamden-link--promo-alt" href="{{ item.href }}">{{ item.title }}</a>
            </li>
        {% endfor %}
    </ul>

    {% if params.showAllHref %}
      <a href="{{ params.showAllHref }}" class="lbcamden-link--promo lbcamden-link--promo--large lbcamden-promo-gallery__all">
        {{ params.showAllLabel | default("Show all") }}
      </a>
    {% endif %}
</div>
